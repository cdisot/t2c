@model T2C.Models.ImagenModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Administrator.cshtml";
}

<h3>Eliminar</h3>

<h4>¿Estás seguro(a) que desea eliminar el equipo?</h4>
<div class="row">
    <div class="col-md-5 col-lg-5">
        @{
            if (Model != null)
            {

                <img src=@Model.PathImagen class="img-responsive img-rounded" alt="properties" style="width: 100%; height: 100%;">

            }

        }

    </div>

    <div class="col-md-3">
        <hr />
        <dl class="dl-horizontal col-md-3 col-lg-3 col-md-pull-5">

            <dt>
                @Html.DisplayNameFor(model => model.NameType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Type)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>

        </dl>


    </div>

</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger btn-s col-md-2">
        <span class="glyphicon glyphicon-trash"></span> Eliminar
    </button>
    <button type="submit" class="btn btn-warning btn-s col-md-2">
        <span class="glyphicon glyphicon-backward"></span> @Html.ActionLink("Volver", "Index")
    </button>
}



