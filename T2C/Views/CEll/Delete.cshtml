@model T2C.Models.CellModel

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Administrator.cshtml";
}
@{

    if (Model != null)
    {

        <h4>¿Estás seguro(a) que desea eliminar el equipo?</h4>
        <div class="row">
            <div class="col-md-5 col-lg-5">
                @{
                    var existe = false;
                    if (Model.Imagens != null && Model.Imagens.Any())
                    {

                        foreach (var imagen in Model.Imagens)
                        {

                            <img src=@imagen.PathImagen class="img-responsive img-rounded" alt="properties" style="width: 100%; height: 100%;">

                            existe = true;
                            break;
                        }
                    }
                    if (!existe)
                    {

                        <img src=~/Resources/notImage.jpg class="img-responsive img-rounded" alt="properties" style="width: 100%; height: 100%;">

                    }
}
            </div>

            <div class="col-md-3">



                <dl class="dl-horizontal col-md-3 col-lg-3 col-md-pull-5">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Model)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Model)</dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.Company)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Company)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Start)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Start)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Condition)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Condition)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Memory)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Memory)
                    </dd>

                </dl>




            </div>
        </div>




    }
    else
    {
        
    }

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger btn-s col-md-2">
        <span class="glyphicon glyphicon-trash"></span> Eliminar
    </button>
    <button type="submit" class="btn btn-warning btn-s col-md-2">
        <span class="glyphicon glyphicon-backward"></span> @Html.ActionLink("Volver", "Index")
    </button>

}
